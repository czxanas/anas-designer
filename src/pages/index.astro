---
import ButtonPrimary from '../components/buttons/button-primary.astro';
import Layout from '../layouts/Layout.astro';
import profile from '../assets/images/anas-is-a-design-engineer.webp';
import writing from '../assets/images/design-writing.webp';
import resume from '../assets/images/design-engineer-resume.webp';
import workOne from '../assets/images/work-1.webp';
import workTwo from '../assets/images/work-2.webp';
import workThree from '../assets/images/work-3.webp';
import { Image } from 'astro:assets';

const seo = {
    // title: 'Astro Boilerplate - Home',
    // description: 'A minimal and powerful Astro boilerplate for fast web development.',
    // social: {
    //     facebook: {
