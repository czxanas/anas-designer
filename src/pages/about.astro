import github from '../assets/images/github.webp';
import notion from '../assets/images/notion.webp';
import jira from '../assets/images/jira.webp';
import cursor from '../assets/images/cursor.webp';
import vercel from '../assets/images/vercel.webp';
import vscode from '../assets/images/vs-code.webp';

const seo = {
