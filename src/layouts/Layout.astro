---
import '../styles/main.css';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro Basics</title>
    </head>
    <body>
        <main
            id="swup"
            class="transition-fade relative w-full h-screen bg-black/5 py-16 px-30 overflow-hidden"
        >
            <div class="relative h-full rounded-3xl overflow-hidden shadow-2xl">
                <div class="absolute top-5 left-6 flex items-center gap-2">
                    <div class="w-4 aspect-square rounded-full bg-black/40"></div>
                    <div class="w-4 aspect-square rounded-full bg-black/40"></div>
                    <div class="w-4 aspect-square rounded-full bg-black/40"></div>
                </div>
                <slot />
            </div>
        </main>
        <script src="../scripts/app.ts"></script>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
