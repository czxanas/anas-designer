---
import '../styles/main.css';
import { SEO } from 'astro-seo';
import { defaultSeo } from '../data/seo';
import { getSeo } from '../utils/seo';
import { Image } from 'astro:assets';
import logo from '../assets/images/logo.webp';

interface Props {
    title: string;
    seo?: Seo;
}

const { title, seo = {} } = Astro.props;

const seoData = getSeo(seo, defaultSeo, title);

const FONTS: string[] = [
    // 'WebfontRegular.woff2',
    // 'WebfontBold.woff2',
];
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <SEO {...seoData} />

        <!-- Fonts -->
        {
            FONTS.map((font) => (
                <link
                    rel="preload"
                    href={`/fonts/${font}`}
                    as="font"
                    type="font/woff2"
                    crossorigin
                />
            ))
        }
        <!--/ FONTS -->
    </head>
    <body>
        <nav class="fixed top-10 left-0 w-full h-fit z-header pointer-events-none">
            <a href="/" class="absolute left-1/2 -translate-x-1/2 w-fit h-fit cursor-pointer pointer-events-auto">
                <Image src={logo} width={30} height={30} alt="Design engineer logo." />
            </a>
        </nav>
        <main id="swup" class="transition-fade relative w-full min-h-[100dvh] overflow-hidden">
            <slot />
        </main>
        <script src="../scripts/app.ts"></script>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
